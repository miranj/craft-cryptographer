{% import '_includes/forms' as forms %}

{% macro configWarning(setting) -%}
    {{ "This is being overridden by the `{setting}` config setting in your `{file}` config file."|t('cryptographer', {
        setting: setting,
        file: 'cryptographer.php',
    })|raw }}
{%- endmacro %}

{% from _self import configWarning %}

{{ forms.textField({
    first:        true,
    label:        "Secret"|t('cryptographer'),
    id:           'secret',
    name:         'secret',
    instructions: "This random text is used for encryption / decryption and must be kept secret."|t('cryptographer'),
    value:        settings.secret,
    autofocus:    true,
    disabled:     'secret' in overrides,
    warning:      'secret' in overrides ? configWarning('secret'),
    errors:       settings.getErrors('secret'),
}) }}
